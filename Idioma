#pragma once
#include <iostream>

using namespace std;

string text1, text2, text3, text4, text5, text6, text7, text8, text9, text10;

void idioma(int leng) {    
  switch(leng) {
    case 1:
      system("cls");
      text1 = "write your name: ";
      text2 = "Write your age: ";
      text3 = "Write the file name: ";
      text4 = "(by default it'll be: 'invoice')";
      text5 = "invoice";
      text6 = " is ok? (y/n) ";
      text7 = " was created";
      text8 = "Sorry, there was an error :(";
    break;

    case 2:
      system("cls");
      text1 = "Escribe tu nombre: ";
      text2 = "Escribe tu edad: ";
      text3 = "Escribe el nombre del archivo: ";
      text4 = "(por defecto sera: 'factura')";
      text5 = "factura";
      text6 = " es correcto? (y/n) ";
      text7 = " fue creado";
      text8 = "Lo sentimos, ha habido un error :(";
    break;
  }
}
