#include <iostream>

using namespace std;

const string empresa = "Hotel CJ Platino.";
const string dir_empresa = "646 V. 5 NO.1186-A \n CENTRO, MX, 68300";
const float IVA = 0.16;

string nombre_cliente, fecha_sal, dir_cliente, fecha, producto;
int Num_per, opcion, cant1, cant2, cant3, cant4, cant5, cant6, cant7, cant8, cant9, cant10;
float sub1, sub2, sub3, sub4, sub5, sub6, sub7, sub8, sub9, sub10, subtotal, total, iva, precio;

int contador = 0;

float 
	precio1 = 23.10, precio2 = 15.80, precio3 = 32.50, precio4 = 59.50, precio5 = 18.90,
	precio6 = 21.90, precio7 = 29.80, precio8 = 9.10, precio9 = 4.30, precio10 = 5.10;

// prototipos de las funciones
void facturar();
void MostrarDatosDeFactura();


void sistemaFactura() {
	facturar();
}


void facturar () {
	// ------------ ENTRADAS ----------------
	// pedir la fecha y numero de facturacion
	cout << "Numero de huespedes: ";
	cin >> Num_per;
	
	cout << "Fecha de entrada: ";
	cin >> fecha;
	cout << "Fecha de salida: ";
	cin >> fecha_sal;
	
	// pedir datos del cliente
	cout << "Nombre : ";
	cin.ignore();
	getline(cin, nombre_cliente);
		
	cout << "DirecciÃ³n: ";
	cin.ignore();
	getline(cin, dir_cliente);
	
	do {
		system("cls");
		cout << "\nProductos y precio unitario:";
	  cout << "\n  (1)  Paquete de tostadas 350g         - $" << precio1;
	  cout << "\n  (2)  Lata de atun 140g                - $" << precio2;
	  cout << "\n  (3)  Frasco de Mayonesa 390g          - $" << precio3;
	  cout << "\n  (4)  Papas fritas 340g                - $" << precio4;
	  cout << "\n  (5)  Leche entera 1L                  - $" << precio5;
	  cout << "\n  (6)  Paquete de papel higienico       - $" << precio6;
	  cout << "\n  (7)  Aceite puro de soya 946ml        - $" << precio7;
	  cout << "\n  (8)  Paquete de Galletas 170g         - $" << precio8;
	  cout << "\n  (9)  Gelatina de agua 125g            - $" << precio9; 
	  cout << "\n  (10) Botella de agua 600ml            - $" << precio10;
	  cout << "\n\n  (11) Emitir factura";
	  cout << "\n\nIngreser los productos a facturar: ";
	  cin >> opcion;
		
		
		switch(opcion) {
			case 1:
				// paquete de tostadas
				producto = "tostadas";
				
				cout << "\nIngrese la Cantidad a comprar: ";
				cin >> cant1;
				
				contador = contador + 1;
				
				sub1 = (cant1 * precio1);
				sub1 = (sub1 * contador);
			break;
			
			case 2:
				// lata de atun
				cout << "\nIngrese la Cantidad a comprar: ";
				cin >> cant2;
				
				contador = contador + 1;

				sub2 = (cant2 * precio2);
				sub2 = (sub2 * contador);
			break;
			
			case 3:
				// frasco de mayonesa 
				cout << "\nIngrese la Cantidad a comprar: ";
				cin >> cant3;
				
				contador = contador + 1;
				
				sub3 = (cant3 * precio3);
				sub3 = (sub3 * contador);
			break;
			
			case 4:
				// Papas fritas
				cout << "\nIngrese la cantidad a comprar: ";
				cin >> cant4;
				
				contador = contador + 1;
				
				sub4 = (cant4 * precio4);
				sub4 = (sub4 * contador);
			break;
			
			case 5:
				// Leche entera
				cout << "\nIngrese la cantidad a comprar: ";
				cin >> cant5;
				
				contador = contador + 1; 
				
				sub5 = (cant5 * precio5);
				sub5 = (sub5 * contador);
			break;
			
			case 6:
				// papel higienico
				cout << "\nIngrese la cantidad a comprar: ";
				cin >> cant6;
				
				contador = contador + 1;
				
				sub6 = (cant6 * precio6);
				sub6 = (sub6 * contador);
			break;
			
			case 7:
				// Aceite puro de soya
				cout << "\nIngrese la cantidad a comprar: ";
				cin >> cant7;
				
				contador = contador + 1;
				
				sub7 = (cant7 * precio7);
				sub7 = (sub7 * contador);
			break;
			
			case 8:
				// paquete de galletas
				cout << "\nIngrese la cantidad a comprar: ";
				cin >> cant8;
				
				contador = contador + 1;
				
				sub8 = (cant8 * precio8);
				sub8 = (sub8 * contador);
			break;
			
			case 9:
				// Gelatina de agua
				cout << "\nIngrese la cantidad a comprar: ";
				cin >> cant9;
				
				contador = contador + 1;
				
				sub9 = (cant9 * precio9);
				sub9 = (sub9 * contador);
			break;
			
			case 10:
				// botella de agua
				cout << "\nIngrese la cantidad a comprar: ";
				cin >> cant10;
				
				contador = contador + 1;
				
				sub10 = (cant10 * precio10);
				sub10 = (sub10 * contador);
			break;
			
			case 11: 
				system("cls");
				
				subtotal = (sub1 + sub2 + sub3 + sub4 + sub5 + sub6 + sub7 + sub8 + sub9 + sub10);
				iva = (subtotal * IVA);
				total = (subtotal + iva);
				
				MostrarDatosDeFactura();
			break;
		}
	} while(opcion != 11);
}


void MostrarDatosDeFactura () {
	// ------------ SALIDAS ----------------
	// mostrar datos de la empresa
	cout << empresa << endl;
	cout << dir_empresa << endl;
	
	// mostrar la fecha y numero de facturacion
	cout << "\n" << fecha << endl;
	cout << "No. de huespedes: " << Num_per << endl;
	
	// mostrar datos del cliente
	cout << "\n\nFacturado a:" << endl;
	cout << "--------------" << endl;
	cout << nombre_cliente << endl;
	cout << fecha_sal << endl;
	cout << dir_cliente << endl;	
	
	cout << "\n\nImporte total" << endl;
	cout << "-------------" << endl;
	cout << "$" << total << endl;
	
	cout << "\n\nForma de pago" << endl;
	cout << "--------------" << endl;
	cout << "Contado" << endl;
	
	cin.ignore();
	cin.get();
}	
